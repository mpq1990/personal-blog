<h1>React Portfolio Items</h1>

<%= link_to 'Create a new Portfolio Item', new_portfolio_path if logged_in?(:site_admin) %>

<%@react_portfolio_items.each do |item| %>
  <p><%= link_to item.title, portfolio_show_path(item) %></p>
  <p><%= item.subtitle%></p>
  <p><%= item.body%></p>
  <%= image_tag item.thumb_image if item.thumb_image.present?%>
  <%= link_to 'Edit', edit_portfolio_path(item) if logged_in?(:site_admin) %>
  <%= link_to 'Delete Portfolio', portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
<%end%>